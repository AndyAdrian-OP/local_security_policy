$DEBUG = $true
$DEBUGFILE = "c:\passwordpolicy_test.txt"

If ($DEBUG) {
	echo "Start Set Procedure..." >> $DEBUGFILE
}

$SecInf = "secimport.inf"
$SecSdb = "secimport.sdb"

$Policy = "<%= @mapping['name'] %>"
$Setting ="<%= @setting %>"

If ($DEBUG) {
	echo "Policy: $Policy" >> $DEBUGFILE
	echo "Setting: $Setting >> $DEBUGFILE
}

$SecFileInfText = '[Unicode]
[System Access]
' + $Policy +' = ' + $Setting + '
[Version]
signature="$CHICAGO$"
Revision=1'

$SecFileInfText >> $SecFileInf

secedit /configure /db $SecFileSdb /cfg $SecFileInf /quiet

del $SecFileSdb
del $SecFileInf
